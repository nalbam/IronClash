{
  "name": "ironclash",
  "version": "1.0.0.dev0",
  "description": "3v3 Real-time Tank Battle Game (Fortress Style)",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "main": "dist/server/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack --mode production",
    "start": "node dist/server/index.js",
    "dev:server": "nodemon --watch src/server --exec ts-node src/server/index.ts",
    "dev:client": "webpack serve --mode development",
    "dev": "npm run dev:server & npm run dev:client",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.client.json --noEmit",
    "lint": "tsc --noEmit",
    "validate": "npm run typecheck && npm test",
    "clean": "rm -rf dist public"
  },
  "keywords": [
    "game",
    "multiplayer",
    "tank-battle",
    "phaser",
    "colyseus",
    "websocket",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@colyseus/schema": "^3.0.76",
    "colyseus": "^0.16.5",
    "colyseus.js": "^0.16.22",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.6",
    "c8": "^10.1.3",
    "copy-webpack-plugin": "^13.0.1",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
