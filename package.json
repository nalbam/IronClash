{
  "name": "ironclash",
  "version": "1.0.0",
  "description": "3v3 Real-time Tank Battle Game (Fortress Style)",
  "scripts": {
    "start": "npm run start:server & npm run start:client",
    "start:server": "ts-node-dev --respawn --transpile-only server/src/index.ts",
    "start:client": "webpack serve --mode development",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p server/tsconfig.json",
    "build:client": "webpack --mode production"
  },
  "dependencies": {
    "@colyseus/schema": "^2.0.35",
    "colyseus": "^0.15.19",
    "colyseus.js": "^0.15.24",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "phaser": "^3.60.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.3",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
